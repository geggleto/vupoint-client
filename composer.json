{
    "name": "vupoint/client",
    "type": "library",
    "authors": [
        {
            "name": "Glenn Eggleton",
            "email": "geggleto@gmail.com",
            "homepage": "https://glenneggleton.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "~5.0",
        "vupoint/data" : "0.0.1"
    },
    "require-dev" : {
        "phpunit/phpunit" : "5.*",
        "mockery/mockery": "@stable"
    },
    "autoload" : {
        "psr-4" : {
            "Vupoint\\" : "src"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Vupoint\\Tests\\": "tests"
        }
    },
    "scripts" : {
        "tests" : "phpunit --bootstrap tests/bootstrap.php tests"
    }
}